{
  "env": { "cypress/globals": true },
  "plugins": ["cypress"],
  "extends": ["eslint:recommended", "next", "prettier"],
  "rules": {
    "no-console": ["warn", { "allow": ["info", "warn", "error", "time", "timeEnd"] }],
    "no-debugger": "warn",
    "no-shadow": "error",
    "no-unused-vars": [
      "warn",
      {
        "args": "all",
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_"
      }
    ],
    "react/display-name": "off",
    "react/prop-types": "off",
    "no-unreachable": "warn"
  }
}
